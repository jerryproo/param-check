        },
        {
          "code": "len-min",
          "value": 2
        },
        {
          "code": "regex-name",
          "msg": "{}格式错误"
        },
        {
          "code": "relate-require-all",
          "msg": "{}不可以有任何为空",
          "value": [
            "idCard",
            "orderNo"
          ]
        }
      ]
    },
    {
      "field": "idCard",
      "fieldName": "身份证号",
      "rules": [
        {
          "code": "required-true"
        },
        {
          "code": "len-min",
          "value": 18
        },
        {
          "code": "len-max",
          "value": 18
        },
        {
          "code": "regex-idCard"
        }
      ]
    },
    {
      "field": "orderNo",
      "fieldName": "订单编号",
